<section>
  <p class="add-item-txt">
    Add new Item
  </p>
  <%= form_with model: @item do |form| %>
    <%= form.text_field :name %>
    <%= form.number_field :price, min: 0.1, step:0.1 %>
    <%= form.check_box :is_imported %>
    <%= form.collection_select :category_id, Category.order(:name), :id, :name %>
    <%= form.submit %>
  <% end %>
</section>
